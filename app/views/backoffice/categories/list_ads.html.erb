<!-- Begin Page Content -->
<div class="container-fluid">
  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
      <h1 class="h3 mb-0 text-gray-800"><%= @category.description %></h1>
  </div>
  
  <div class="row" id="table-div">
    <div class="col-md-12">
      <table class="table table-striped table-bordered">
        <thead>
          <th>#</th>
          <th>Título</th>
          <th>Descrição</th>
        </thead>
        <tbody>
          <% @count = 1 %>
          <% @ads.each do |ad| %>
            <tr>
              <td><%= @count %></td>
              <td><%= ad.title %></td>
              <td><%= ad.description %></td>
            </tr>
            <% @count += 1 %>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Voltar', backoffice_categories_path, class:'btn btn-primary'%>
    </div>
  </div>
</div>